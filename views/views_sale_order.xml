<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_order_infragis_view">
        <field name="name">sale.order.igis</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="igis_project_id" attrs="{'invisible':[('igis_project_id', '==', False)]}"/>
                <button name="generate_project" string="Projekt erstellen" type="object" class="oe_highlight" attrs="{'invisible':[('igis_project_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="assessment_index_id"/>
            </xpath>
            <xpath expr="//group[@name='note_group']/group/field[@name='note']" position="replace">
                <field name="note" nolabel="1" placeholder="Terms and conditions..." widget="html"/>
            </xpath>
        </field>
    </record>

