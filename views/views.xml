<odoo>
    <record model="ir.ui.view" id="account_invoice_igis_form_view">
        <field name="name">account.invoice.igis</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="end_customer_id"/>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_infragis_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree.infragis</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="end_customer_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter_infrags" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!--<xpath expr="/search/group/filter[@name='group_by_partner_id']" position="after">
                <filter name="group_by_end_customer_id" string="Endkunde" context="{'group_by':'end_customer_id'}"/>
            </xpath> -->
            <xpath expr="/search/field[@name='partner_id']" position="after">
                <field name="end_customer_id" operator="child_of"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_infragis_index_form">
        <field name="name">infragis.index.form</field>
        <field name="model">assessment.index</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Index-Eintrag">
                <sheet name="Projekt">
                    <group>
                        <group>
                            <field name="year"/>
                            <field name="value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_infragis_index_tree">
        <field name="name">Indexeintr채ge</field>
        <field name="model">assessment.index</field>
        <field name="arch" type="xml">
            <tree string="Indexeintr채ge">
                <field name="year"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_infragis_index_window">
        <field name="name">Indexeintr채ge</field>
        <field name="res_model">assessment.index</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id" ref="view_hostadmin_domain_filter"/>-->
    </record>

    <record model="ir.ui.view" id="view_infragis_project_form">
        <field name="name">infragis.project.form</field>
        <field name="model">infragis.project</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Projekt">
                <sheet name="Projekt">
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="alt_customer_id"/>
                            <field name="introduction_date"/>
                            <field name="initial_invoice_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_infragis_project_tree">
        <field name="name">infragis.project.tree</field>
        <field name="model">infragis.project</field>
        <field name="arch" type="xml">
            <tree string="Projekte">
                <field name="partner_id"/>
                <field name="customer_id"/>
            </tree>
        </field>
    </record>

    <record id="view_infragis_project_filter" model="ir.ui.view">
        <field name="name">infragis.project.search</field>
        <field name="model">infragis.project</field>
        <field name="arch" type="xml">
            <search string="Projektsuche">
                <field name="partner_id"/>
                <field name="customer_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_customer_id" string="Re-Empf채nger" context="{'group_by':'customer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_infragis_project_window">
        <field name="name">Projekte</field>
        <field name="res_model">infragis.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_infragis_project_filter"/>
    </record>


    <!-- Top menu item -->
    <menuitem name="InfraGIS" id="menu_infragis" sequence="40"/>

    <menuitem name="Projekte" id="menu_infragis_projects" parent="menu_infragis"
              action="action_infragis_project_window"/>

    <menuitem name="Index" id="menu_infragis_index" parent="menu_infragis"
              action="action_infragis_index_window"/>
</odoo>
